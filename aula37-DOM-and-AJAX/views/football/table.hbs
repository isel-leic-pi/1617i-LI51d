
{{#extend "scripts"}}
    <script language="javascript" type="text/javascript" src="/assets/js/football/table.js">
    </script>
{{/extend}}

<div class="row">
    <div class="col-xs-3">
        {{> favourites }}
    </div>
    <div class="col-xs-9">
        <table class="table">
            <thead>
                <tr>
                    <th>Position</th><th>Team Name</th><th>Points</th><th>Favourites</th>
                </tr>
            </thead>
                {{#each teams}}
                <tr>
                    <td>{{position}}</td>
                    <td>{{name}}</td>
                    <td>{{points}}</td>
                    <td ><input type="checkbox" onclick="checkFavouriteHandler(this, {{id}})"/></td>
                </tr>
                {{/each}}
            <tbody>
            </tbody>
        </table>
    </div>
</div>